<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.ac.hansung.sensorvideo.SettingsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height"
        android:layout_margin="@dimen/settings_layout_margin">

        <TextView
            android:id="@+id/label_dir_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_margin"
            android:text="@string/dir_path"
            android:textSize="@dimen/settings_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_dir_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_margin"
            android:background="@color/light_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/settings_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_dir_path"
            app:layout_constraintStart_toEndOf="@id/label_dir_path"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_dir_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_margin"
            android:background="@android:color/transparent"
            android:contentDescription="@string/dir_path"
            android:src="@drawable/ic_folder_open_black_24dp"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height"
        android:layout_margin="@dimen/settings_layout_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_margin"
            android:text="@string/video_size"
            android:textSize="@dimen/settings_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_video_size"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="@dimen/settings_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </Spinner>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
